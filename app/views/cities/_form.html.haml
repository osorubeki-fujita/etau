= form_for @city do |f|
  - if @city.errors.any?
    #error_explanation
      %h2= "#{pluralize(@city.errors.count, "error")} prohibited this city from being saved:"
      %ul
        - @city.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name_ja
    = f.text_field :name_ja
  .field
    = f.label :name_hira
    = f.text_field :name_hira
  .field
    = f.label :name_en
    = f.text_field :name_en
  .field
    = f.label :city_category_id
    = f.number_field :city_category_id
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :twitter
    = f.text_field :twitter
  .field
    = f.label :wikipedia
    = f.text_field :wikipedia
  .field
    = f.label :population
    = f.number_field :population
  .actions
    = f.submit 'Save'
